<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Layout</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css" />
  </head>

  <body class="bg-gray-900 h-screen">
    <%- include('_nav') %>
    <form action="" method="post">
      <div class="bg-gray-800 flex flex-col h-full w-full max-w-screen-lg mx-auto">
        <div class="relative">
          <div class="h-32 bg-gradient-to-r from-red-500 to-purple-500"></div>
          <div class="absolute bottom-0 left-4 transform translate-y-1/2">
            <div class="w-24 h-24 rounded-full border-4 border-gray-900 overflow-hidden">
              <!-- profile picture -->

              <img src="<%= profile.profilePicture %>" alt="Profile" class="w-full h-full object-cover" />
            </div>
          </div>
        </div>

        <div class="pt-16 px-6 pb-6">
          <div class="flex justify-between items-center mb-4">
            <div>
              <label for="profilePicture" class="text-white">Profile Picture</label><br />
              <input type="text" name="profilePicture" id="" value="<%= profile.profilePicture %>" />
              <br />
              <br />
              <!-- username -->
              <label for="name" class="text-white">Name : <%= profile.name %></label><br />
              <span> <input type="text" name="name" value="<%= profile.name %>" /></span>
              <a href="">
                <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition">Edit profile</button>
              </a>
            </form>
              <br />
              <br />
              <table class="min-w-full text-white border border-slate-500 table-auto">
                <thead class="bg-gray-800">
                  <tr>
                    <th class="px-4 py-2 border border-slate-600">Post</th>
                    <th class="px-4 py-2 border border-slate-600">Caption</th>
                    <th class="px-4 py-2 border border-slate-600">Action</th>
                  </tr>
                </thead>
                <tbody class="bg-gray-700">
                  <% posts.Posts.forEach(element => { %>
                  <tr class="border-t border-slate-600">
                    <td class="px-4 py-2">
                      <img src="<%= element.image %>" alt="" class="w-24 h-24 object-cover" />
                    </td>
                    <td class="px-4 py-2"><%= element.caption %></td>
                    <td class="px-4 py-2">
                      <button class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-2 rounded">
                      <a href="/profile/delete/<%= element.id %>">
                        Delete

                      </a>
                    </button>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <!-- router ke edit profile -->
          </div>
        </div>
      </div>
    
  </body>
</html>
